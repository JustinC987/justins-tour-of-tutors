{
	"env": {
		"browser": true,
		"commonjs": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 7
	},
	"rules": {
		"indent": ["error", "tab"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"brace-style": [
			"error",
			"stroustrup",
			{
				"allowSingleLine": false
			}
		],
		"no-console": "off",
		"max-len": 2
	}
}
